@using DiplomService.ViewModels.User;
@model UpdatePasswordViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "_CabinetLayout";
}

<div class="container">
    <div class="vertical-center-block">
        <form method="post" enctype="multipart/form-data" class="login-form">
            <input type="hidden" asp-for="Id"/>
            <div class="form-group my-2">
                <label asp-for="OldPassword" class="control-label"></label>
                <input asp-for="OldPassword" class="login-form__input form-control"/>
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="login-form__input form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="login-form__input form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <input type="submit" value="Сохранить" class="login-form__submit d-block w-25 m-lg-auto" />
        </form>
    </div>
</div>
